{% extends 'formbase.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style_Inscription.css') }}">

{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <section id="hero">
        <div class="hero-container" data-aos="zoom-in" data-aos-delay="100">
            {{ form_start(registrationForm, {'attr': {'class': 'form-signin'}}) }}
                <img class="mb-4" src="{{ asset('/images/LogoMistify.png') }}" alt="logo" width="85" height="85">
                <h2 class="h4 mb-4 font-weight-normal">Créer un compte</h2>
                <div class="form-group">
                    {{ form_row(registrationForm.user_firstname, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.user_lastname, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.user_pseudo, {'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.user_password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.user_mail, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.user_born, {'attr': {'class': 'form-control', 'placeholder': 'Date de naissance'}}) }}
                </div>
                <button type="submit" class="btn btn-danger btn-block">S'inscrire</button>
                <div class="inscription mt-4">
                    <a href="{{ path('app_login') }}" target="iframe_a ">Se connecter</a>
                </div>
            {{ form_end(registrationForm) }}

        </div>
    </section>
{% endblock %}
